{
	"compilerOptions": {
		"target": "es2024",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"outDir": "dist",
		"allowJs": false,
		"lib": ["ES2024"],
		"types": ["node"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
