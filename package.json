{
	"name": "zmq-simulator",
	"version": "1.1.0",
	"description": "Node js application to publish message with ZeroMQ protocol",
	"repository": "https://github.com/NY-Daystar/ZMQ-Simulator",
	"author": "Lucas Noga <luc4snoga@gmail.com>",
	"license": "GPL-3.0-only",
	"engines": {
		"node": ">=24.0.0"
	},
	"main": "publisher/src/index.js",
	"scripts": {
		"start:publisher": "pm2 start publisher/ecosystem.config.json --no-daemon",
		"start:consumer": "pm2 start consumer/ecosystem.config.json --no-daemon",
		"dev": "npm run dev:publisher && npm run dev:consumer",
		"dev:publisher": "cross-env NODE_ENV=development nodemon publisher/src/index.js",
		"dev:consumer": "cross-env NODE_ENV=development nodemon consumer/src/index.js",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"prettier": "prettier --check **/*.js",
		"prettier:fix": "prettier --write **/*.js",
		"docker:build": "docker-compose build",
		"docker": "docker-compose -p zmq-simulator up"
	},
	"dependencies": {
		"colors": "^1.0.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"helmet": "^8.1.0",
		"http-status": "^2.1.0",
		"joi": "^18.0.1",
		"minimist": "^1.0.0",
		"moment": "^2.0.0",
		"pm2": "^6.0.8",
		"serve-favicon": "^2.5.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"zeromq": "^6.0.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.34.0",
		"cross-env": "^10.0.0",
		"eslint": "^9.34.0",
		"jest": "^30.0.5",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2"
	}
}
